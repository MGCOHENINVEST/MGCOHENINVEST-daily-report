<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ subject or "Daily Report" }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body style="font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif; max-width:640px; margin:0 auto; padding:1rem; line-height:1.4;">
    <h1>{{ headline or "Daily Report" }}</h1>
    <p><strong>Freeze:</strong> {{ freeze }} · <strong>Snapshot:</strong> {{ snapshot }}</p>

    {% if exec_summary %}
      <h3>Summary</h3>
      <ul>
        {% for line in exec_summary %}
          <li>{{ line }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if movers %}
      <h3>Movers</h3>
      <table role="presentation" width="100%" cellpadding="4" cellspacing="0">
        <thead>
          <tr>
            <th align="left">Ticker</th>
            <th align="left">Name</th>
            <th align="right">Δ%</th>
          </tr>
        </thead>
        <tbody>
          {% for m in movers %}
            {% set delta = m.delta_pct|float %}
            {% if delta > 2 %}
              {% set style = "color:green;font-weight:bold" %}
              {% set symbol = "▲" %}
            {% elif delta > 0.5 %}
              {% set style = "color:green" %}
              {% set symbol = "▲" %}
            {% elif delta < -2 %}
              {% set style = "color:red;font-weight:bold" %}
              {% set symbol = "▼" %}
            {% elif delta < -0.5 %}
              {% set style = "color:red" %}
              {% set symbol = "▼" %}
            {% else %}
              {% set style = "color:gray" %}
              {% set symbol = "–" %}
            {% endif %}
            <tr>
              <td>{{ m.ticker }}</td>
              <td>{{ m.name }}</td>
              <td align="right" style="{{ style }}">{{ symbol }} {{ "%.2f"|format(delta) }}%</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}

    <hr>
    <p style="font-size:0.8rem;color:#888;">Daily report · Freeze {{ freeze }} · Snapshot {{ snapshot }}</p>
  </body>
</html>
